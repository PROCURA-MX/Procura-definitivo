# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================

# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/procura_cobros_prod"

# JWT Secret (DEBE SER DIFERENTE EN PRODUCCIÓN)
JWT_SECRET="tu_jwt_secret_super_seguro_de_produccion_aqui"

# Puerto del servidor
PORT=3002

# Entorno
NODE_ENV=production

# CORS - Solo tu dominio de producción
CORS_ORIGIN="https://tu-dominio.com"

# Google Calendar API (si usas integración)
GOOGLE_CLIENT_ID="tu_google_client_id"
GOOGLE_CLIENT_SECRET="tu_google_client_secret"
GOOGLE_REDIRECT_URI="https://tu-dominio.com/auth/google/callback"

# Configuración de email (si usas notificaciones)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="tu_email@gmail.com"
SMTP_PASS="tu_app_password"

# Configuración de archivos
UPLOAD_DIR="/var/www/uploads"
MAX_FILE_SIZE="10MB"

# Configuración de logs
LOG_LEVEL="info"
LOG_FILE="/var/log/procura-cobros/app.log"

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET="tu_session_secret_super_seguro"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
