    "build:watch": "tsc --watch",
    "dev": "nodemon --exec ts-node index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
